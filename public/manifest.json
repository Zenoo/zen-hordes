{
  "manifest_version": 3,
  "name": "Zen MyHordes",
  "description": "Zen MyHordes is a Chrome extension that enhances the user experience of the MyHordes website.",
  "version": "1.0.0",
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://myhordes.eu/*",
        "https://myhordes.fr/*",
        "https://myhordes.de/*",
        "https://myhord.es/*"
      ],
      "js": [
        "js/vendor.js",
        "js/content_script.js"
      ],
      "css": [
        "css/style.min.css"
      ]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://myhordes.eu/*",
    "https://myhordes.fr/*",
    "https://myhordes.de/*",
    "https://myhord.es/*"
  ]
}
