{
  "manifest_version": 3,
  "name": "Zen Hordes",
  "description": "An extension that enhances the user experience of the MyHordes website.",
  "version": "1.4.0",
  "action": {
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "64": "icon-64.png",
      "96": "icon-96.png",
      "128": "icon-128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "64": "icon-64.png",
    "96": "icon-96.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://myhordes.eu/*",
        "https://myhordes.fr/*",
        "https://myhordes.de/*",
        "https://myhord.es/*"
      ],
      "js": [
        "js/vendor.js",
        "js/content_script.js"
      ],
      "css": [
        "css/style.min.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://myhordes.eu/*",
    "https://myhordes.fr/*",
    "https://myhordes.de/*",
    "https://myhord.es/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "zen-hordes@franckdemoute.fr"
    }
  }
}
